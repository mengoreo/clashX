{
  "name": "clashx-safari-extension-popup",
  "version": "1.0.0",
  "description": "This is the popup page for ClashX Safari Web Extension.",
  "author": "Vence Will",
  "license": "MIT",
  "scripts": {
    "css:autoprefixer": "postcss -u autoprefixer -r popup/*.css",
    "css:scss": "node-sass --output-style compressed -o popup src/scss",
    "css:lint": "stylelint src/scss/*.scss --syntax scss",
    "build:css": "npm run css:lint && npm run css:scss && npm run css:autoprefixer",
    "build:js": "webpack --mode=production",
    "build:html": "posthtml -c posthtml.json",
    "build": "run-s build:*",
    "serve": "browser-sync start --server \"popup\" --files \"popup\"",
    "watch:css": "onchange \"src/scss\" -- npm run build:css",
    "watch:html": "onchange \"src/views\" -- npm run build:html",
    "watch:images": "onchange \"src/images\" -- npm run build:images",
    "watch:js": "onchange \"src/js\" -- webpack --mode=development",
    "watch": "run-p serve watch:*"
  },
  "devDependencies": {
    "autoprefixer": "^10.1.0",
    "browser-sync": "^2.26.13",
    "eslint": "^7.16.0",
    "eslint-webpack-plugin": "^2.4.1",
    "htmlnano": "^0.2.8",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^8.3.1",
    "posthtml": "^0.15.1",
    "posthtml-cli": "^0.9.1",
    "posthtml-modules": "^0.6.4",
    "stylelint": "^13.8.0",
    "ts-loader": "^8.0.13",
    "typescript": "^4.1.3",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.1"
  },
  "browserslist": [
    "safari >= 14"
  ]
}
